# Ignore configuration files generated by DDEV
.ddev/

# Ignore Composer dependencies
/vendor/

# Ignore Drupal core files (managed by Composer)
/web/core/
!/web/core/LICENSE.txt

# Ignore contrib modules and themes (managed by Composer)
/web/modules/contrib/
!/web/modules/contrib/.gitkeep
/web/themes/contrib/
!/web/themes/contrib/.gitkeep

# Ignore site-specific files
/web/sites/*/files/
web/sites/*/private/
web/sites/*/settings*.php
web/sites/*/services.yml
web/sites/*/development.services.yml
web/sites/*/default.settings.php

# Ignore environment-specific files
.env
.env.local
.env.*.local

# Ignore IDE and OS-specific files
.idea/
.vscode/
*.swp
*.bak
*.tmp
*.log
.DS_Store
Thumbs.db

# Ignore PHPUnit test output
/web/sites/simpletest/
test-results/

# Ignore node_modules if using frontend tooling
/node_modules/
node_modules/
